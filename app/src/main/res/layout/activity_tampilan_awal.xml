<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TampilanAwalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40e0d0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:text="Ngaji Kuy"
                fontPath="fonts/NeoSans-Medium.otf"
                tools:ignore="MissingPrefix"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/berandaa"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/shape3">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:onClick="biodata"
                        android:background="@drawable/profill"/>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/shape3"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pengaturann"
                        android:onClick="pindahatur"/>

                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beranda"
                    android:textStyle="bold"
                    fontPath="fonts/NeoSans-Medium.otf"
                    tools:ignore="MissingPrefix"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="33dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:id="@+id/keluaran"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="18dp"
                    fontPath="fonts/NeoSans-Medium.otf"
                    tools:ignore="MissingPrefix"
                    android:id="@+id/pindah"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginLeft="33dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengaturan"
                    android:textSize="18dp"
                    fontPath="fonts/NeoSans-Medium.otf"
                    tools:ignore="MissingPrefix"
                    android:id="@+id/textView4"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
        </LinearLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPagerr"
                android:background="@drawable/shape5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                />
        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/searchh"
                        android:background="@drawable/shape3"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:onClick="pencarian"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/kalenderr"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/shape3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mutabah"
                        android:onClick="suara"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape3"/>

                </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pencarian"
                    android:textSize="20dp"
                    fontPath="fonts/NeoSans-Medium.otf"
                    tools:ignore="MissingPrefix"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginLeft="18dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jadwal"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    fontPath="fonts/NeoSans-Medium.otf"
                    tools:ignore="MissingPrefix"
                    android:textStyle="bold"
                    android:layout_marginLeft="29dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mutaba'ah"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    fontPath="fonts/NeoSans-Medium.otf"
                    tools:ignore="MissingPrefix"
                    android:textColor="#000000"
                    android:layout_marginLeft="17dp"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>